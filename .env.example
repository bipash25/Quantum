# =============================================================================
# Quantum Trading AI - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control!

# =============================================================================
# DATABASE
# =============================================================================
DB_USER=quantum
DB_PASSWORD=your_secure_password_here
DB_NAME=quantum_trading
DB_HOST=timescaledb
DB_PORT=5432

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# CELERY
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# TELEGRAM
# =============================================================================
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Channel ID (starts with -100 for channels)
# You can get this by forwarding a message from your channel to @userinfobot
TELEGRAM_CHANNEL_ID=-100xxxxxxxxxx

# Optional: Elite/Paid channel
TELEGRAM_ELITE_CHANNEL_ID=-100xxxxxxxxxx

# =============================================================================
# API
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate_a_random_64_char_string_here
JWT_SECRET=generate_another_random_string_here

# API Keys in JSON format for authentication
# Example: {"your-api-key": {"tier": "free", "rate_limit": 10}}
API_KEYS={}

API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# MONITORING
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Confidence threshold for generating signals (0-100)
SIGNAL_CONFIDENCE_THRESHOLD=70

# Free tier delay in minutes
FREE_TIER_DELAY_MINUTES=15

# Maximum signals per day for free tier
FREE_TIER_MAX_SIGNALS=10
